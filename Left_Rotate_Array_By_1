public class Main{
    public static void main(String args[]){
        int[] nums = {1,2,3,4,5};
        Solution sol = new Solution();
        sol.rotateArrayByOne(nums);
        for (int num : nums) {                    //used an enhanced form of for loop
            System.out.print(num + " ");          //only used to read elements and when we dont need the index
        }
    }
}
class Solution {
    public void rotateArrayByOne(int[] nums) {
        int temp = nums[0];
        for ( int i = 1; i<nums.length; i++){
            nums[i-1] = nums[i];
        }
        nums[nums.length-1] = temp;
    }
}
